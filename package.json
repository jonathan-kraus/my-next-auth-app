{
  "name": "my-neon-auth-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "next start",
    "dev": "next dev --turbopack",
    "build": "pnpm prisma generate && next build",
    "prettier:check": "prettier --check . --ignore-path .prettierignore",
    "prettier:fix": "prettier --write . --ignore-path .prettierignore",
    "security": "pnpm audit",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "test:ci": "vitest run --coverage",
    "prepare": "husky install"
  },
  "pnpm": {
    "overrides": {
      "cookie": "^1.0.0"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.5",
    "bcryptjs": "^2.4.3",
    "next": "13.4.12",
    "next-auth": "^4.29.6",
    "prisma": "^4.20.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "20.4.2"
  }
}
